<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rodrigo.promedionotas.Notas">

    <TextView
        android:text="Bienvenido, le ayudaremos a verificar su promedio. Buena Suerte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#060606"
        android:textColorHighlight="#030303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corte No. 1"
        android:id="@+id/ct1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corte No. 2"
        android:id="@+id/ct2"
        android:layout_below="@+id/ct1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corte No. 3"
        android:id="@+id/ct3"
        android:layout_below="@+id/ct2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corte No. 4"
        android:id="@+id/ct4"
        android:layout_alignBottom="@+id/nota4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#040404" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota1"
        android:layout_above="@+id/ct2"
        android:layout_toRightOf="@+id/ct1"
        android:layout_toEndOf="@+id/ct1"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:text="1" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota2"
        android:layout_above="@+id/ct3"
        android:layout_alignLeft="@+id/nota1"
        android:layout_alignStart="@+id/nota1"
        android:text="2" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota3"
        android:text="3"
        android:layout_alignBottom="@+id/ct3"
        android:layout_alignLeft="@+id/nota2"
        android:layout_alignStart="@+id/nota2" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota4"
        android:text="4"
        android:layout_below="@+id/ct3"
        android:layout_alignLeft="@+id/nota3"
        android:layout_alignStart="@+id/nota3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resultado"
        android:layout_alignBaseline="@+id/CalcularSuma"
        android:layout_alignBottom="@+id/CalcularSuma"
        android:layout_alignLeft="@+id/nota4"
        android:layout_alignStart="@+id/nota4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="SUMAR"
        android:id="@+id/CalcularSuma"
        android:layout_below="@+id/ct4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textColor="#101b63" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="promedio "
        android:id="@+id/promedio"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/CalcularSuma"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#4c6fd8" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="Tu promedio es ---->"
        android:id="@+id/total"
        android:layout_alignTop="@+id/promedio" />

</RelativeLayout>
